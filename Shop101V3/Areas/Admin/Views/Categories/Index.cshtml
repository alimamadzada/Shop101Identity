@model List<Category>
<div class="d-flex justify-content-between align-items-center" >
<h1 class="mb-4">Categories</h1>
<a  class="btn btn-success" href="/admin/categories/create">Create</a>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Settings</th>

        </tr>
    </thead>
    <tbody>
        @foreach (Category item in Model)
        {
            <tr>
                <td>
                    <img src="~/images/featured-categories/@item.ProductImage " style="width:50px "/>
                </td>
                <td>@item.Name</td>
                <td>
                    <a href="/admin/categories/edit/@item.Id" class="btn btn-danger">
                        <i class="fas fa-pen"></i>
                    </a>
                    <a href="/admin/categories/delete/@item.Id" class="btn btn-primary">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>