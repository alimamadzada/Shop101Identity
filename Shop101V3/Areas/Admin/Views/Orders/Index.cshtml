@model List<Order>
<div class="d-flex justify-content-between align-items-center">
    <h1 class="mb-4">Orders</h1>
    <a class="btn btn-success" href="/admin/orders/Create">Create Orders</a>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Address</th>
            <th>Products</th>
            <th>Settings</th>

        </tr>
    </thead>
    <tbody>
        @foreach (Order item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Description))
                    {
                        <span>
                            @item.Description
                        </span>
                    }
                    else
                    {
                        foreach (OrderItem item2 in item.OrderItems)
                        {
                            <span>
                                Name :  @item2.Product.Name * Count :  @item2.Count//
                            </span>
                        }
                    }
                </td>
                <td>
                    <a href="/admin/orders/edit/@item.Id" class="btn btn-primary">
                        Edit
                    </a>
                    <a href="/admin/orders/delete/@item.Id" class="btn btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>