@model List<BasketItemVM>

<div class="container py-5">
    <table class="table table-hover " style="vertical-align:middle">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th> Price</th>
            <th>Count</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/images/products/@item.MainImage" style="width:50px" class="rounded" />
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Count
                </td>

                <td><a href="/basket/RemoveFromBasket/@item.ProductId" class="btn btn-danger">Remove</a></td>
            </tr>
        }
    </table>
    <h2>
        Total : @ViewBag.Total
    </h2>
    <form action="/basket/confirm" method="post">
        <input type="email" name="email" placeholder="Email" class="form-control mb-2" />
        <input type="text" name="address" placeholder="Address" class="form-control mb-2" />
        <button type="submit" class="btn btn-success">Buy!</button>
    </form>
</div>